<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00880C"/> <!-- Warna border -->
            <corners android:radius="170dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Background -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF"/> <!-- Warna latar belakang -->
            <corners android:radius="170dp"/> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
